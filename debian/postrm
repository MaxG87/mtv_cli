#!/bin/bash
# vim:ft=sh:ai:et:si:sts=4:sw=4
#
#
# postrm script for mtvclient
#
set -e
. /usr/share/debconf/confmodule

case "$1" in
    upgrade)
# cleanup old config template
        rm -f -- "/usr/share/mtvclient/mtv_cli.conf.new"
    ;;

    remove)
# cleanup config template
        rm -f -- "/usr/share/mtvclient/mtv_cli.conf.new"
# remove virtualenv after package files are removed
        rm -rf -- "/usr/lib/mtvclient"
    ;;

    purge)
    ;;

    failed-upgrade|abort-upgrade)
    ;;
    abort-install|disappear)
# preinst virtualenv failed, do a cleanup
        rm -rf -- "/usr/lib/mtvclient"
    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
